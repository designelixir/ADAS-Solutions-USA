<!doctype html>
<html class="bg">
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Archivo:ital,wght@0,100..900;1,100..900&family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.10.4/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.10.4/ScrollTrigger.min.js"></script>
    {squarespace-headers}
  </head>
  <body id="{squarespace.page-id}" class="{squarespace.page-classes}">
  <div class="site-container" style="width: 100%;">
      <main class="content-container" role="main" data-content-field="main-content">
      <squarespace:navigation navigationId="siteNav" template="site-navigation" />
      {@|apply pageHeader.block}
      {.if item}
      <section class='basic-padding job-listing'>
            <h2 class="red-text bold-text">Job Details</h2>
            {.section item}
              {excerpt}
              {body}
              <div class="flex-center-spacebetween">
                <h2 style="margin: 25px 0;"><strong>Application</strong></h2>
                <p class="small-text">Trouble viewing this application? <a href="{sourceUrl}" target="_blank">Click here.</a></p>
              </div>
              {.if sourceUrl}
                  <iframe
                    id="JotFormIFrame-252366272074154"
                    title="ADAS Solutions USA Specific Application"
                    allowtransparency="true"
                    allow="geolocation; microphone; camera; fullscreen; payment"
                    src="{sourceUrl}"
                    frameborder="0"
                    style="min-width:100%;max-width:100%;height:80vh; max-width: 780px; border:none;"
                  >
                  </iframe>
                  <script src='https://cdn.jotfor.ms/s/umd/latest/for-form-embed-handler.js'></script>
                  <script>window.jotformEmbedHandler("iframe[id='JotFormIFrame-252366272074154']", "https://form.jotform.com/")</script>
              {.end}
            {.end}
              
            <div style="margin-top: 50px">
                <squarespace:block-field id="HowToApply" columns="1" />
            </div>
       </section>
        
        {.or}
        <section class="basic-padding">
            <squarespace:block-field id="Careers-Intro" columns="1" />
            <div class="team-photo"></div>
        </section>
     
        <section style="margin-top: -75px; z-index: 2;">
            <div class="white-text" style="background: var(--red); padding: 50px 25px; border-top-left-radius: 15px; border-top-right-radius: 15px;">
                <squarespace:block-field id="Application-Intro" columns="1" />
            </div>
            <div class="basic-padding">
            <squarespace:query collection="careers" limit="100">
                <div class="flex-start-start flex-wrap">
                {.repeated section items}
                <a class="no-link-styling job-summary-card-wrapper" href="{fullUrl}">
                    <article id="post-{id}" class="hover job-summary-card {@|item-classes} {.repeated section categories}{@|slugify} {.end}" data-item-id="{id}" >
                      <h2 class="summary-title-card" style="font-size: 24px; min-height: unset;">{title}</h2>
                      <div class="flex-center-start flex-wrap">
                          {.repeated section categories}
                          <span style="background: white; color: black; padding: 5px; border-radius: 5px; font-size: 12px; margin: 0 5px 5px 0">
                              {@}
                          </span>
                          {.end}
                          {.repeated section tags}
                          <span style="background: white; color: black; padding: 5px; border-radius: 5px; font-size: 12px; margin: 0 5px 5px 0">
                              {@}
                          </span>
                          {.end}
                      </div>
                        
                        
                      {.if excerpt}
                          <p class="summary-excerpt-card job-card-description" style="font-size: 16px; line-height: 22px;">{excerpt}</p>
                      {.end}
                      <div style="height: 15px"></div>
                        <span class="small-black-button" style="font-size: 12px; ">Job Details &amp; Application &rarr;</span>
                        <div style="height: 15px"></div>
                      
                            
                            
                    </article>
                </a>
                {.or}

                <div class="flex-center-center basic-padding">
                  <h3><i>There are currently no active job listings.</i></h3>
                </div>

                {.end}
                
                </div>
                </squarespace:query>
            </div>
            <div class="evergreen-block basic-padding">
                  <squarespace:block-field id="Evergreen-Explanation" columns="1" />
                </div>
        </section>
       
       {.end}
      </main>
</div>
    
    <squarespace:script src="site.js" combo="{.if authenticatedAccount}false{.or}true{.end}" />
    {squarespace-footers}

  </body>
</html>
