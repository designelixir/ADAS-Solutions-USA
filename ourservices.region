<!doctype html>
<html class="bg">
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Archivo:ital,wght@0,100..900;1,100..900&family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.10.4/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.10.4/ScrollTrigger.min.js"></script>
    {squarespace-headers}
  </head>
  <body id="{squarespace.page-id}" class="{squarespace.page-classes}">
    <squarespace:navigation navigationId="siteNav" template="site-navigation" />
    <div class="site-container">
      <main class="content-container" role="main" data-content-field="main-content">
      <div class="page-hero flex-center-center" style="background-image: url('{collection.mainImage.assetUrl}');">
        <div class="page-hero-content">
          <h1>{collection.title}</h1>
          {.if collection.description}
            <h4>{collection.description|safe}</h4>
          {.end}
        </div>
      </div>

      <section class="basic-padding adas-icon-bg">
        <div style="max-width: 70%">
          <squarespace:block-field id="Our-Services-Description" columns="1" />
        </div>
        <squarespace:block-field id="Service-Labels-Description" columns="1" />
      </section>
      <div class="services-header">
    <div class="services-header-wrapper flex-center-center flex-column">
        <div class="services-header-title flex-center-center">
            <div id="calibration-Toggle" class="services-header-title-item border-right flex-center-center active" onclick="toggle('calibration')"><h3>Calibration</h3></div>
            <div id="windshields-Toggle" class="services-header-title-item flex-center-center"  onclick="toggle('windshieldReplacement')"><h3>Windshield Replacement</h3></div>
        </div>
        <div class="services-header-details">
        {#  Calibration  }
            <div class="service-type flex-center-center flex-column fade-in" id="calibration">
                <squarespace:block-field id="Calibration-Description" columns="1" />
                <squarespace:query collection="services-list" limit="20" category="Calibration">
                <div class="service-toggler flex-center-center flex-wrap" >
                {.repeated section items}
                    <div class="calibration-block flex-center-center" id="{title}">
                        <div class="front flex-center-center flex-column fade-in">
                            <div class="calibration-block-img" style="background-image: url('{assetUrl}')"></div>
                            <h5 class="centered-text">{title}</h5>
                        </div>
                        <div class="back flex-center-center fade-in">
                          <p class="white-text centered-text">{body|safe}</p>
                        </div>
                    </div>
                {.end}
                </div>
                </squarespace:query>
                <squarespace:block-field id="Calibration-CallToAction" columns="1" />
            </div>
          {#  Windshield Replacement  }
          <div class="service-type flex-center-center flex-column fade-in" id="windshieldReplacement">
                <squarespace:block-field id="Windshield-Description" columns="1" />
                {#  Rivian  }
                <squarespace:query collection="services-list" limit="20" category="Windshields">
                <div class="service-toggler flex-start-center flex-wrap" >
                {.repeated section items}
                    <div class="windshield-block flex-center-center" id="{title}">
                        <div class="front flex-center-center flex-column">
                            <div class="calibration-block-img" style="background-image: url('{assetUrl}')"></div>
                            <h5 class="centered-text">{title}</h5>
                            <p class="white-text">{body}</p>
                            <squarespace:block-field id="{title|slugify}-Description" columns="1" />
                        </div>
                    </div>
                {.end}
                </div>
                </squarespace:query>
            </div>
        </div>
    </div>
</div>
      {@|apply services.block}
      <section class="basic-padding banner-bg-reverse" style="margin-top: -50px; z-index: 3; position: relative; background-color: unset;">
        <squarespace:block-field id="WhatToExpect-Description" columns="1" />
      </section>


      <section class="basic-padding banner-bg">
        <squarespace:block-field id="WhatIsADAS-Description" columns="1" />
      </section>

        <section id="WhatIsADAS" style=" width: 100%; margin-top: 25px;">
            <squarespace:query collection="glossary" tag="diagram" limit="20">
            
                {.repeated section items}
                <script>
                var description = `
                <div id='{urlId}-text' className="diagram-feature-description fade-in">
                    <h3>{title}</h3>
                    <p>{excerpt|safe}</p>
                </div>`
                descriptionArray.push(description)
                </script>
                {.end}                        
            </squarespace:query>
            
            {@|apply adasDiagram.block}
        </section>
        <div  id="legend" style="padding: 10px; display: none;">
                            <h4>Legend</h4>
                            <div class="flex-start-start flex-wrap">
                                <div class="flex-center-start legend-item-wrapper" id="longRangeRadar">
                                    <div class="legend-item"></div><p>Long Range Radar</p>
                                </div>
                                <div class="flex-center-start legend-item-wrapper" id="lidar">
                                    <div class="legend-item"></div><p>Lidar</p>
                                </div>
                                <div class="flex-center-start legend-item-wrapper" id="cameras">
                                    <div class="legend-item"></div><p>Cameras</p>
                                </div>
                            </div>
                        </div>
                    </div>

       {squarespace.main-content}
      </main>
      {@|apply footer.block}

    </div>
    
    <squarespace:script src="site.js" combo="{.if authenticatedAccount}false{.or}true{.end}" />
    {squarespace-footers}

  </body>
</html>
