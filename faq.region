<!doctype html>
<html class="bg">
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    {squarespace-headers}
  </head>
  {@|apply googleAnalytics.block}
  <script>
    var descriptionArray=[]
  </script>
  <body id="{squarespace.page-id}" class="{squarespace.page-classes}">
    
    
      <main class="content-container" role="main" data-content-field="main-content">
      <squarespace:navigation navigationId="siteNav" template="site-navigation" />
      <div class="page-hero flex-center-center" {.if item.assetUrl} style="background-image: url('{item.assetUrl}');" {.or} style="background-image: url('{collection.mainImage.assetUrl}');" {.end}>
        <div class="page-hero-content">
            {.if item.title}
                <a href='/{collection.urlId}' class="no-link-styling">
                    <h3 class="white-text">&larr; {collection.title}</h3>
                </a>
                <h1>{.if item.title} {item.title} {.end}</h1>
                {.if item.excerpt}
                    <h4>{item.excerpt|safe}</h4>
                {.end}
                
            {.or}
                <h1>{collection.title} </h1>
                {.if collection.description}
                    <h4>{collection.description|safe}</h4>
                {.end}
            {.end}
            
        </div>
      </div>
        
        
            {.if item.title}
            <section class="basic-padding">
                {squarespace.main-content}
            </section>
            {.or}
            <section>
                <div class="basic-padding" style="transform:translateY(-50px);">
                    {.section collection}
                        <squarespace:category collection="faq-resources">
                        {.if categories}
                            <div class="flex-center-start flex-wrap">
                            {.repeated section categories}
                                <button class="button red-button"><a class="no-link-styling" href="?category={name}">{name}</a></button>
                            {.end}
                            </div>
                        {.end}
                        </squarespace:category>
                    {.end}
                </div>
                <div class="">
                {.section collection}
                    <squarespace:category collection="{urlId}">
                        {.if categories}
                        <div class="category-wrapper flex-start-start flex-column">
                            
                            {.repeated section categories}
                            <div class="blog-category-section">
                                <h2 class="white-text">{name}</h2>
                                <a href="/faq-resources?category=Resources" class="white-text no-link-styling hover">Browse all {name} articles &rarr;</a>
                            </div>

                            {.alternates with}
                                <div class="basic-padding flex-start-start flex-wrap">
                                <squarespace:query collection="faq-resources" category="{name}" limit="4">
                                    {.repeated section items}
                                    <a href='{.if sourceUrl} {sourceUrl} {.or} {fullUrl} {.end}' class="no-link-styling">
                                        <div id='{urlId}' class="blog-summary-card box-shadow">
                                            <div class="summary-image-card" style="background-image: url({assetUrl})"></div>
                                            <h3 class="summary-title-card" style="min-height: 80px">{title}</h3>
                                            <p class="summary-excerpt-card no-link-styling">{excerpt|safe|truncate 75}</p>
                                            <a style="font-size: 12px;">Read more &rarr;</a>
                                        </div>
                                    </a>
                                    {.end}                        
                                </squarespace:query>
                                </div>
                            {.end}
                        
                        </div>
                        {.end}
                    </squarespace:category>
                {.end}
                    
                </div>

                <div id="WhatIsADAS-Anchor" class="grid-bg">
                    <div class="banner-bg" style="margin-bottom: -25px;">
                        <squarespace:block-field id="WhatIsADAS-Description" columns="1" />        
                    </div>
                    <squarespace:query collection="glossary" tag="diagram" limit="20">
                        {.repeated section items}
                        <script>
                        var description = `
                        <div id='{urlId}-text' className="diagram-feature-description fade-in">
                            <h3>{title}</h3>
                            <p>{excerpt|safe}</p>
                        </div>`
                        descriptionArray.push(description)
                        </script>
                        {.end}                        
                    </squarespace:query>
                    
                    {@|apply adasDiagram.block}
                    <squarespace:block-field id="ViewGlossaryButton" columns="1" />
                </div>

              
            </section>
            {.end}
        
       
      </main>

    
    <squarespace:script src="site.js" combo="{.if authenticatedAccount}false{.or}true{.end}" />
    {squarespace-footers}

  </body>
</html>
