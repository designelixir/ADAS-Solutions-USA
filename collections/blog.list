
<!-- item loop -->
{.repeated section items}
  {.repeated section categories}

  <article id="post-{id}" class="summary-card {@|item-classes} {.repeated section categories}{@|slugify} {.end}" data-item-id="{id}" onclick="window.open('{fullUrl}', '_self')">
    
    
        <div class="summary-image-card" style="background-image: url({assetUrl})"></div>
        <h3 class="summary-title-card">{title}</h3>
        <p class="summary-excerpt-card">{excerpt|safe|truncate 250}</p>
        <a style="font-size: 12px;">Read more &rarr;</a>
    
    
  </article>

  {.end}
  {.end}

{.or}

  <!-- no items means no blog posts -->
  <p><em>No blog posts yet.</em></p>

{.end}
