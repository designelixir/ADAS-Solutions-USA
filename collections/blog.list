
 <div>
    <div class="banner-bg">
        <squarespace:block-field id="FrequentlyAskedQuestions" columns="1" />        
    </div>
    <div class="basic-padding flex-start-start flex-wrap">

  {.repeated section items}
    
        {.equal? categoryFilter "Resources"}
          
          <article id="post-{id}" data-item-id="{id}" class="summary-card box-shadow" onclick="window.open('{fullUrl}', '_self')">
                <div class="summary-image-card" style="background-image: url({assetUrl})"></div>
                <h3 class="summary-title-card">{title}</h3>
                <p class="summary-excerpt-card">{excerpt|safe|truncate 250}</p>
                <a style="font-size: 12px;">Read more &rarr;</a>
        </article>
          {.end}
      
  {.or}
    <p><em>No blog posts yet.</em></p>
  {.end}
</div>
