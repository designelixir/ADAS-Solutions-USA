
{.section item}

  <!--WRAPPER-->
  <article id="post-{id}" class="{@|item-classes}" data-item-id="{id}">
    <span class="blog-item-tag">
    {.repeated section categories}
      <a class="category" href="{collection.fullUrl}?category={@|url-encode}">{@}</a>{.alternates with},
    {.end}
    </span>
    <div class="blog-size-paragraph">
      {body}
    </div>

    <!--BLOG INJECTION-->
    {postItemInjectCode}
    

    <!--TAGS-->
    {.repeated section tags}
      <a class="tag" href="{collection.fullUrl}?tag={@|url-encode}">{@}</a>{.alternates with},
    {.end}
 <p class="meta">
      <a href="{fullUrl}" class="permalink"><time datetime="{addedOn|date %F}">{addedOn|date %B %d, %Y}</time></a> by <a href="{collection.fullUrl}?author={author.id}">{author.displayName}</a>
    </p>
    <!--COMMENTS-->
    {@|comments}

  </article>

  <h3>Read more similar to this topic: </h3>
  <squarespace:query collection="{collection.urlId}" category="@" limit="4">

    <div class="flex-start-start">
      {.repeated section items}
        <article id="post-{id}" class="summary-card {@|item-classes} {.repeated section categories}{@|slugify} {.end}" data-item-id="{id}" onclick="window.open('{fullUrl}', '_self')">
              <div class="summary-image-card" style="background-image: url({assetUrl})"></div>
              <h3 class="summary-title-card">{title}</h3>
              <p class="summary-excerpt-card">{excerpt|safe|truncate 50}</p>
              <a style="font-size: 12px;">Read more &rarr;</a>
        </article>
      {.end}
    </div>

  </squarespace:query>

{.end}

