<!doctype html>
<html class="bg">
  <head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Archivo:ital,wght@0,100..900;1,100..900&family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.10.4/gsap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.10.4/ScrollTrigger.min.js"></script>
    {squarespace-headers}
  </head>
  <body id="{squarespace.page-id}" class="{squarespace.page-classes}">
    <squarespace:navigation navigationId="siteNav" template="site-navigation" />
    <div class="site-container">
      <main class="content-container" role="main" data-content-field="main-content">
      
      <div class="page-hero flex-center-center" {.if collection.mainImage.assetUrl} style="background-image: url('{collection.mainImage.assetUrl}');"{.end}>
        <div class="page-hero-content">
          <h1>{collection.title}</h1>
          {.if collection.description}
            <h4>{collection.description|safe}</h4>
          {.end}
        </div>
      </div>

      <section class="basic-padding">
        <squarespace:block-field id="{collection.title}-Service-Intro" columns="1" />
        <squarespace:query collection="locations" tag="{title}" limit="20">
            {.repeated section items}
            
             <article id="post-{id}" class="location-summary-card {@|item-classes}" data-item-id="{id}">
    
                <div class="flex-center-start">
                    <div class="location-image-card" style="background-image: url({assetUrl})"></div>
                    <div class="location-address">
                        <div class="flex-center-start no-flex-grow location-phone">
                            <img src="../assets/icons/phone.svg" style="width: 15px; height: 15px;" alt="phone icon"/>&nbsp;
                            <h3><a href="tel:{customContent.phoneNumber}" target="_blank">Call Us</a></h3>
                        </div> 
                        <h3 style="margin: 10px 0;">{location.addressLine1}, <br>{location.addressLine2}, USA</h3>
                        <div class="flex-center-start no-flex-grow contact-form-line">
                            <img src="../assets/icons/communicate.png" style="width: 15px; height: 15px;" alt="phone icon"/>&nbsp;
                            <squarespace:block-field id="Contact-{.repeated section categories}{@|slugify}{.end}-Form" columns="1" />
                        </div> 
                    </div>
                </div>
                {.if excerpt}
                    <p class="summary-excerpt-card">{excerpt|safe|truncate 200}</p>
                {.end}
                
                <div class="flex-start-start flex-wrap book-button-wrapper">
                    {.if sourceUrl}<a href="{sourceUrl}" target="_blank"><button class="book-button">All Services</button></a>{.end}
                    {.if customContent.bookRivian}<a href="{customContent.bookRivian}" target="_blank"><button class="book-button">Book Rivian Services</button></a>{.end}
                    {.if customContent.bookTesla}<a href="{customContent.bookTesla}" target="_blank"><button class="book-button">Book Tesla Services</button></a>{.end}
                    {.if customContent.bookHail}<a href="{customContent.bookHail}" target="_blank"><button class="book-button">Book Hail Repair</button></a>{.end}
                </div>
                
                
                <h6><i>Click the map to get directions.</i></h6>
                {body}
                
        </article>
            {.end}                        
        </squarespace:query>        

        {squarespace.main-content}
       </section>
      </main>

    </div>
    <squarespace:script src="site.js" combo="{.if authenticatedAccount}false{.or}true{.end}" />
    {squarespace-footers}

  </body>
</html>
